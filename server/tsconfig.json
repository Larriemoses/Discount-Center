{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "node", // Very important for finding modules like express
    "esModuleInterop": true, // Important for importing CommonJS modules
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
    // Ensure no conflicting settings here
  },
  "include": ["src/**/*.ts"], // Ensure src files are included
  "exclude": ["node_modules"]
}
