{
  "compilerOptions": {
    "target": "es2020", // modern and stable
    "module": "commonjs", // required for Node.js
    "lib": ["es2020"], // include relevant libraries
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
