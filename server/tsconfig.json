// Discount-Center/server/tsconfig.json
{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs", // Keep this for Node.js backend
    // "rootDir": "./src",  <-- THIS LINE SHOULD BE REMOVED
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@common/*": ["../common/src/*"]
    }
  },
  "include": ["src/**/*.ts", "../common/src/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "../client", // <--- CRITICAL ADDITION
    "../client/**/*" // <--- CRITICAL ADDITION
  ]
}
