{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "../",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@common/*": ["../common/src/*"]
    }
  },
  "include": ["src/**/*.ts", "../common/src/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "../client", // âœ… Still important for separation
    "../client/**/*"
  ]
}
